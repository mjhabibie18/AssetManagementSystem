        $(document).ready(function LoadTable() {
            $('#ProcurementTable').DataTable({
                "ajax": {
                    "processing": true,
                    "serverSide": false,
                    "filter": true,
                    url: "GetProcurement",
                    type: "GET",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    dataSrc: ""
                },
                "columns": [
                    {
                        "data": null,
                        "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": "id" },
                    { "data": "itemName" },
                    { "data": "description" },
                    { "data": "price" },
                    {
                        "data": "procurementDate",
                        render: function (data, type, row) {
                            let date = moment(row.procurementDate).format('DD MMMM YYYY')
                            return date
                        }
                    },
                    { "data": "statusProcurement" },
