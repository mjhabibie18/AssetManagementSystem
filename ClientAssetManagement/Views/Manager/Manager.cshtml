                    //    },
                    //    "orderable": false,
                    //    "searchable": false
                    //},
                ],
                buttons: [
                    {
                        extend: 'excelHtml5',
                        title: 'Transaction',
                        sheetName: 'Transaction',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5, 6],
                            modifier: { order: 'index' }
                        }
                    }
                ],
            });
            //$('#dataForm').submit(function (e) {
            //    e.preventDefault();
            //    Procurement(Id);
            //})
            $("#ProcurementTable").on('click', '#Approve', function () {
                var data = $("#ProcurementTable").DataTable().row($(this).parents('tr')).data();
                console.log(data);
                $("exampleModal").modal("show");
                $('#Id').val(data.id);
            });
        })
        function update() {
            Approved(Id);
        }
        const Approved = (Id) => {
            var User = new Object();
            User.id = $("#Id");
            $.ajax({
